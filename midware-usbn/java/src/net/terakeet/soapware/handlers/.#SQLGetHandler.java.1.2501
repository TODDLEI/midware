                }
                logger.portalDetail(callerId, "getLineCleaningHistory", locationId, "lineCleaning",0, "getLineCleaningHistory", transconn);


            } catch (SQLException sqle) {
                logger.dbError("Database error in getLineCleaningHistory: " + sqle.toString());
                throw new HandlerException(sqle);
            } finally {
                close(stmt);
                close(rs);
