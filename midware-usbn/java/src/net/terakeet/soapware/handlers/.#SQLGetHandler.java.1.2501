        PreparedStatement stmt              = null;
        ResultSet rs                        = null,rsDetail = null;
        logger.debug("Version:"+version);
        String changeLogVersion             = "SELECT DISTINCT l.product,  l.type, IFNULL(p.name, ''), IFNULL(p.approved, 0), IFNULL((SELECT pSM.productSet FROM productSetMap pSM LEFT JOIN productSet pS ON pS.id= pSM.productSet" +
                                            " WHERE product=l.product AND pS.productSetType=7 ORDER BY pS.id DESC LIMIT 1), 0) FROM productChangeLog l LEFT JOIN product p ON p.id = l.product " +
                                            " WHERE date > ? AND productType=1 ORDER BY l.id, date;";
        String selectBrewStyle              = "SELECT pS.id, pS.name, pS.productSetType FROM productSetMap pSM LEFT JOIN productSet pS ON pS.id = pSM.productSet " +
                                            " WHERE pSM.product=? AND pS.productSetType IN (7,9);";
        String breweryLog                   = "SELECT DISTINCT l.product, l.type, p.name ,l.productType, p.approved from productChangeLog l LEFT JOIN productSet p ON p.id=l.product " +
                                            " WHERE  date > ? AND p.name <> 'null' AND l.productType > 1 ORDER BY l.id, date;";
        if(customerId == 269) {
            changeLogVersion                = "SELECT DISTINCT l.product, l.type, b.name, p.approved, (SELECT pSM.productSet FROM productSetMap pSM  LEFT JOIN productSet pS ON pS.id= pSM.productSet" +
                                            " WHERE product=l.product AND pS.productSetType=7 ORDER BY pS.id DESC LIMIT 1) FROM productChangeLog l LEFT JOIN brasstapProducts b ON b.usbnId = l.product "
                                            + " LEFT JOIN product p ON p.id=b.usbnId"
                                            + " WHERE date > ? AND b.name <> 'null' AND productType=1 ORDER BY l.id, date;";
        }

        try {
            if(productSet <1){
            stmt                            = transconn.prepareStatement(changeLogVersion);
            stmt.setString(1, version);
