                                            " FROM customer c " +
                                            " LEFT JOIN location l ON l.customer = c.id LEFT JOIN locationDetails lD ON lD.location = l.id " +
                                            " WHERE c.id=? AND lD.active = 1 " +
                                            " ORDER BY l.name ASC ";

        int userId                          = -1;
        String platformName                 = null;

        PreparedStatement stmt              = null;
        ResultSet rs                        = null;

        try {

            switch (platform) {
                case 0:
                    platformName            = "bevBOSS";
