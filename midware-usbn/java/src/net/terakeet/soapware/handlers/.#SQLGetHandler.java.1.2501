    private void getProducts1XML(Element toAppend, ResultSet rs) throws SQLException {
        int productCount                    = 0;
        while (rs.next()) {             
            productCount++;           
            int colCount                    = 1;
            Element ProductE1               = toAppend.addElement("product");
            ProductE1.addElement("productId").addText(String.valueOf(rs.getInt(colCount++)));
            ProductE1.addElement("name").addText(HandlerUtils.nullToEmpty(rs.getString(colCount++)));
            ProductE1.addElement("category").addText(String.valueOf(rs.getInt(colCount++)));
            ProductE1.addElement("segment").addText(String.valueOf(rs.getInt(colCount++)));
            ProductE1.addElement("isActive").addText(String.valueOf(rs.getBoolean(colCount++)));
            ProductE1.addElement("boardName").addText(HandlerUtils.nullToString(rs.getString(colCount++),"NA"));
            ProductE1.addElement("abv").addText(HandlerUtils.nullToString(rs.getString(colCount++),"0"));
            ProductE1.addElement("bbtvCategory").addText(String.valueOf(rs.getInt(colCount++)));
            String origin                   = HandlerUtils.nullToString(rs.getString(colCount++),"NA");
            if(origin.equals("")) {
                origin                      = "NA";
            }
            ProductE1.addElement("origin").addText(origin);
            ProductE1.addElement("styleLogo").addText(HandlerUtils.nullToEmpty("http://beerboard.tv/USBN.BeerBoard.UI/Images/glass/"+HandlerUtils.nullToString(rs.getString(colCount++),"Custom")+".png"));
            ProductE1.addElement("brewLogo").addText(HandlerUtils.nullToEmpty("http://beerboard.tv/USBN.BeerBoard.UI/Images/logo/"+HandlerUtils.nullToString(rs.getString(colCount++),"Rotator.png")));
            ProductE1.addElement("seasonality").addText(HandlerUtils.nullToString(rs.getString(colCount++),"NA"));
            ProductE1.addElement("breweryId").addText(String.valueOf(rs.getInt(colCount++)));
            ProductE1.addElement("styleId").addText(String.valueOf(rs.getInt(colCount++)));
            ProductE1.addElement("isApprove").addText(String.valueOf(rs.getInt(colCount++)));
            ProductE1.addElement("ibu").addText(String.valueOf(rs.getInt(colCount++)));
            ProductE1.addElement("beerAdvocate").addText(HandlerUtils.nullToString(rs.getString(colCount++),""));
            ProductE1.addElement("breweyDB").addText(HandlerUtils.nullToString(rs.getString(colCount++),""));
            ProductE1.addElement("rateBeer").addText(HandlerUtils.nullToString(rs.getString(colCount++),""));
