            stmt.setInt(paramIndex++, locationId);
            if (supplierId > 0) {
                stmt.setInt(paramIndex++, supplierId);
            }

            stmt.setString(paramIndex++, startDate);
            stmt.setString(paramIndex++, endDate);
            rs =
                    stmt.executeQuery();

            // get all miscProducts in the purchases;
            paramIndex =
