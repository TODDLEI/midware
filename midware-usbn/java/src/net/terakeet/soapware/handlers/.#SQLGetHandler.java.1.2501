                        = "SELECT l.id, c.value/10000, l.ouncesPoured, l.lastType FROM line l LEFT JOIN bar b ON b.id = l.bar LEFT JOIN calibration c ON c.line = l.lineIndex AND c.system = l.system AND c.location = b.location " +
                            " WHERE l.status = 'RUNNING' AND c.active = 1 AND b.location = ? AND l.system = ? AND l.lineIndex = ?;";
        String insertNewReading
                        = "INSERT INTO readingNew (line, value, date, quantity, type) VALUES (?, ?, ?, ?, ?);";


        PreparedStatement stmt = null;
        ResultSet rs = null, innerRS = null;

        try {
            stmt = transconn.prepareStatement(select);
            rs = stmt.executeQuery();
            while (rs.next()) {
                int previous = 0;
                stmt            = transconn.prepareStatement(selectPrevious);
                stmt.setInt(1, rs.getInt(1));
                stmt.setInt(2, rs.getInt(2));
                stmt.setString(3, rs.getString(4));
                innerRS         = stmt.executeQuery();
                if (innerRS.next()) {
                    previous    = innerRS.getInt(1);
                }
                
                int diffValue   = rs.getInt(3) - previous;
                stmt            = transconn.prepareStatement(selectLineId);
                stmt.setInt(1, 1013);
                stmt.setInt(2, 2256);
                stmt.setInt(3, rs.getInt(2));
                innerRS         = stmt.executeQuery();
                if (innerRS.next()) {
                    int lineId      = innerRS.getInt(1);
                    
                    Double calibValue  = innerRS.getDouble(2);
                    Double prevReading = (innerRS.getDouble(3) < 0 ? 0 : innerRS.getDouble(3));
                    Double ozDifference = calibValue * diffValue;
                    if (previous == 0) {
                        ozDifference = 0.0;
                    }
                    double currReading
                                = prevReading + ozDifference;
                    
                    stmt        = transconn.prepareStatement(insertNewReading);
                    stmt.setInt(1, lineId);
                    stmt.setDouble(2, currReading);
                    stmt.setString(3, rs.getString(4));
                    stmt.setDouble(4, ozDifference);
                    stmt.setInt(5, 0);
                    stmt.executeUpdate();

                }
            }
        } catch (SQLException sqle) {
            logger.dbError("Database error in getSegment: " + sqle.getMessage());
            throw new HandlerException(sqle);
        } finally {
            close(rs);
            close(innerRS);
            close(stmt);
        }
